<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Appender para consola en JSON -->
    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"app":"mi-app","env":"${ENV:-dev}"}</customFields>
            <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSSXXX</timestampPattern>
            <includeMdc>true</includeMdc>
            <!-- Incluir todos los campos del MDC -->
            <includeMdcKeyName>txId</includeMdcKeyName>
            <includeMdcKeyName>operation</includeMdcKeyName>
            <includeMdcKeyName>status</includeMdcKeyName>
            <includeMdcKeyName>durationMs</includeMdcKeyName>
            <includeMdcKeyName>error</includeMdcKeyName>
            <includeMdcKeyName>correlationId</includeMdcKeyName>
            <includeMdcKeyName>clienteId</includeMdcKeyName>
            <includeMdcKeyName>sistemaDestino</includeMdcKeyName>
        </encoder>
    </appender>

    <!-- Appender para consola normal -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{40} - %msg %mdc%n</pattern>
        </encoder>
    </appender>

    <!-- Logger ESPECÍFICO para logs estructurados -->
    <logger name="STRUCTURED_LOG" level="INFO" additivity="false">
        <appender-ref ref="JSON_CONSOLE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Configuración por defecto -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>